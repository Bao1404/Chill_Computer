
<h2>Chi tiết đơn hàng - @ViewBag.OrderId</h2>

<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("N0")₫</td>
                <td>@item.TotalPrice.ToString("N0")₫</td>
            </tr>
        }
    </tbody>
</table>