@model Chill_Computer.ViewModels.ProfileViewModel
@{
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
    ViewData["ChooseProfile"] = "chooseButton";
}
<style>

        .account-info label {
            margin-bottom: 6px;
            font-size: 14px;
            color: #333;
        }

        .account-info input {
            margin-bottom: 16px;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 6px;
        }
</style>

<div class="content">
    <h2 style="font-size: 60px; font-weight: bold; margin-bottom: 24px;">Thông tin tài khoản</h2>
    <form class="account-info" style="display: flex; flex-direction: column; max-width: 600px;">
        <label>FullName</label>
        <input type="text" value="@Model.FullName" readonly />

        <label>Số điện thoại</label>
        <input type="text" value="@Model.Phone" readonly />

        <label>Email</label>
        <input type="text" value="@Model.Email" readonly />

        <label>Date of Birth</label>
        <input type="text" value="@Model.Dob?.ToString("dd/MM/yyyy")" readonly />
    </form>
</div>